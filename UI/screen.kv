<Root>:
    LoginScreen:
        name: 'login'
    VersionScreen:
        name: 'version'
    RaspberryScreen:
        name:'raspberry'
    StartScreen:
        name: 'start'
    TimeScreen:
        name: 'time'
    ConfigScreen:
        name: 'config'
    WaitScreen:
        name: 'wait'
    CheckScreen:
        name: 'check'
    StretchScreen:
        name: 'stretch'
    TalkScreen:
        name: 'talk'
    TalkScreen2:
        name: 'talk2'
    BreatheScreen:
        name: 'breathe'
    BallScreen:
        name: 'ball'
    CongratsScreen:
        name: 'congrats'
    SnoozeScreen:
        name: 'snooze'
<LoginScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'UI/g-holo.png'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'Welcome to Wellness and Productivity'
            font_size: 24
            color: 0,0,0,1
        GridLayout:
            cols: 2
            padding: [10,70,70,70]
            Label:
                text: 'Enter your User ID'
                font_size: 18
                color: 0,0,0,1
                halign: 'center'
                size_hint: (.3, None)
            TextInput:
                id: login
                multiline:False
                font_size: 18
                size_hint: (.7, None)
                on_text_validate: root.update()
        GridLayout:
            cols: 2
            height: 125
            size_hint_y: None
            Button:
                text: "Exit"
                font_size: 18
                background_color: .7, .7, 1, 1
                on_release:root.quit()
            Button:
                text: "Submit"
                font_size: 18
                background_color: .7, .7, 1, 1
                on_release: root.update()
<VersionScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'UI/g-holo.png'
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: "Which version do you want to run?"
            color: 0, 0, 0, 1
            font_size: 20
        GridLayout:
            cols: 2
            padding: [10,0,70,100]
            CheckBox:
                group: 'version'
                color: 0,0,0,1
                on_active:root.ping(False)
            Label:
                text: "Hardware"
                color: 0,0,0,1
                font_size: 18
            CheckBox
                group: 'version'
                color: 0, 0, 0, 1
                on_active:root.ping(True)
            Label:
                text: "Hardware not included"
                color: 0,0,0,1
                font_size: 18
        GridLayout:
            cols: 2
            height: 125
            size_hint_y: None
            BoxLayout:
                orientation: 'vertical'
                Button:
                    text: "Go back"
                    font_size: 18
                    background_color: .7, .7, 1, 1
                    on_release:
                        root.parent.current='login'
                        root.parent.transition.direction = 'right'
                Button:
                    text: "Exit"
                    font_size: 18
                    background_color: .7, .7, 1, 1
                    on_release:root.quit()
            Button:
                text: "Submit"
                font_size: 18
                background_color: .7, .7, 1, 1
                on_release: root.switch()
<RaspberryScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'UI/g-holo.png'
    BoxLayout:
        orientation:'vertical'
        Label:
            id:lbl
            text: "Enter your Raspberry Pi connection information below."
            color: 0, 0, 0, 1
            font_size: 20
            size_hint: (1, .3)
        GridLayout:
            cols: 2
            padding: [10,10,80,80]
            spacing: 10
            Label:
                text: 'IP address'
                font_size: 18
                color: 0,0,0,1
                halign: 'center'
                size_hint: (.3, 1)
            TextInput:
                id: ip
                write_tab: False
                focus: True
                multiline:False
                font_size: 18
                size_hint: (.7, 1)
                on_text_validate: root.update()
            Label:
                text: 'Port'
                font_size: 18
                color: 0,0,0,1
                halign: 'center'
                size_hint: (.3, 1)
            TextInput:
                id: port
                write_tab: False
                focus: True
                multiline:False
                font_size: 18
                size_hint: (.7, 1)
                on_text_validate: root.update()
            Label:
                text: 'Username'
                font_size: 18
                color: 0,0,0,1
                halign: 'center'
                size_hint: (.3, 1)
            TextInput:
                id: user
                write_tab: False
                focus: True
                multiline:False
                font_size: 18
                size_hint: (.7, 1)
                on_text_validate: root.update()
            Label:
                text: 'Password'
                font_size: 18
                color: 0,0,0,1
                halign: 'center'
                size_hint: (.3, 1)
            TextInput:
                id: pw
                write_tab: False
                focus: True
                multiline:False
                password: True
                font_size: 18
                size_hint: (.7, 1)
                on_text_validate: root.update()
        GridLayout:
            cols: 2
            height: 125
            size_hint_y: None
            BoxLayout:
                orientation: 'vertical'
                Button:
                    text: "Go back"
                    font_size: 18
                    background_color: .7, .7, 1, 1
                    on_release:
                        root.parent.current='version'
                        root.parent.transition.direction = 'right'
                Button:
                    text: "Exit"
                    font_size: 18
                    background_color: .7, .7, 1, 1
                    on_release:root.quit()
            Button:
                text: "Submit"
                font_size: 18
                background_color: .7, .7, 1, 1
                on_release: root.update()
<StartScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'UI/g-holo.png'
    BoxLayout:
        orientation:'vertical'
        Label:
            text: "Select what you want to focus on today!"
            color: 0, 0, 0, 1
            font_size: 20
        GridLayout:
            cols: 2
            padding: [100,0,0,100]
            Label:
                text: "I want to work on stretching more"
                font_size: 18
                color: 0, 0, 0, 1
            CheckBox:
                on_active:root.ping('stretch', self.active)
                color: 0, 0, 0, 1
            Label:
                text: "I want to work on guided breathing"
                font_size: 18
                color: 0, 0, 0, 1
            CheckBox:
                on_active:root.ping('breathe', self.active)
                color: 0, 0, 0, 1
            Label:
                text: "I want to talk to my friends"
                font_size: 18
                color: 0, 0, 0, 1
            CheckBox:
                on_active:root.ping('talk', self.active)
                color: 0, 0, 0, 1
        GridLayout:
            cols: 2
            height: 125
            size_hint_y: None
            BoxLayout:
                orientation: 'vertical'
                Button:
                    text: "Go back"
                    font_size: 18
                    background_color: .7, .7, 1, 1
                    on_release: root.switch()
                Button:
                    text: "Exit"
                    font_size: 18
                    background_color: .7, .7, 1, 1
                    on_release:root.quit()
            Button:
                text: "Submit"
                font_size: 18
                background_color: .7, .7, 1, 1
                on_release:
                    root.parent.current='time'
                    root.parent.transition.direction = 'left'
<TimeScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'UI/g-holo.png'
    BoxLayout:
        orientation:'vertical'
        Label:
            text: "How often do you want to be reminded for each activity?"
            color: 0, 0, 0, 1
            font_size: 20
            size_hint: (1, .2)
        GridLayout:
            id: gl
            cols: 2
            size_hint: (1, .8)
            padding: [0,0,100,50]
        GridLayout:
            cols: 2
            height: 125
            size_hint_y: None
            BoxLayout:
                orientation: 'vertical'
                Button:
                    text: "Go back"
                    font_size: 18
                    background_color: .7, .7, 1, 1
                    on_release:root.switch_back()
                Button:
                    text: "Exit"
                    font_size: 18
                    background_color: .7, .7, 1, 1
                    on_release:root.quit()
            Button:
                text: "Submit"
                font_size: 18
                background_color: .7, .7, 1, 1
                on_release: root.switch_forward()
<ConfigScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'UI/g-holo.png'
    BoxLayout:
        id: bl
        orientation: 'vertical'
        Label:
            id: big_lbl
            text: "Do you wish to calibrate stretching?"
            color: 0, 0, 0, 1
            font_size: 20
            size_hint: (1, None)
        Label:
            id: small_lbl
            text: "Note: you MUST complete this step if this is your first time running the program, ever"
            color: 0, 0, 0, 1
            font_size: 16
            size_hint: (1, None)
        GridLayout:
            id: check_gl
            cols: 2
            padding: [0,0,0,30]
            CheckBox:
                group: 'config'
                color: 0,0,0,1
                on_active:root.ping(True)
            Label:
                text: "I need to calibrate"
                color: 0,0,0,1
                font_size: 18
            CheckBox
                group: 'config'
                color: 0, 0, 0, 1
                on_active:root.ping(False)
            Label:
                text: "I already calibrated!"
                color: 0,0,0,1
                font_size: 18
        GridLayout:
            id: activation_gl
            cols: 2
            height: 125
            size_hint_y: None
            BoxLayout:
                orientation: 'vertical'
                Button:
                    text: "Go back"
                    font_size: 18
                    background_color: .7, .7, 1, 1
                    on_release:root.switch_back()
                Button:
                    text: "Exit"
                    font_size: 18
                    background_color: .7, .7, 1, 1
                    on_release:root.quit()
            Button:
                text: "Submit"
                font_size: 18
                background_color: .7, .7, 1, 1
                on_release: root.pre_calibrate()
<WaitScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'UI/g-holo.png'
    BoxLayout:
        id: boxy2
        orientation: 'vertical'
        Image:
            id: img_wait
            source: 'UI/face.png'
    BoxLayout:
        id: boxy
        orientation: 'vertical'
        padding: [0, 300, 0, 0]

<CheckScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'UI/g-holo.png'
    Image:
        id: img_check
        source: 'UI/face.png'
    BoxLayout:
        orientation: 'vertical'
        id: bl1
        padding: [0, 300, 0, 0]
        Label:
            id: lbl1
            text: 'Thank you for selecting your wellness actions!\nYou will be reminded to focus on these throughout the day.'
            halign: 'center'
            font_size: 20
            color: 0, 0, 0, 1
<StretchScreen>:
    canvas.before:
        Rectangle:
            pos: self.pos
            size: self.size
            source: 'UI/g-holo.png'
    BoxLayout:
        orientation: 'vertical'
        id: bl_stretch
        BoxLayout:
            id: bl2_stretch
            orientation: 'vertical'
            # padding: [0, 0, 0, 350]
            Image:
                id: img_stretch
                source: 'UI/clock.png'
                pos_hint: {'center_x': .5}
                size_hint: (.5, None)
